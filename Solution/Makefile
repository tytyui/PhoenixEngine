# GNU Make workspace makefile autogenerated by Premake

.NOTPARALLEL:

ifndef config
  config=debug
endif

ifndef verbose
  SILENT = @
endif

ifeq ($(config),debug)
  PhoenixEngine_config = debug
  TestGame_config = debug
endif
ifeq ($(config),release)
  PhoenixEngine_config = release
  TestGame_config = release
endif

PROJECTS := PhoenixEngine TestGame

.PHONY: all clean help $(PROJECTS) 

all: $(PROJECTS)

PhoenixEngine:
ifneq (,$(PhoenixEngine_config))
	@echo "==== Building PhoenixEngine ($(PhoenixEngine_config)) ===="
	@${MAKE} --no-print-directory -C PhoenixEngine -f Makefile config=$(PhoenixEngine_config)
endif

TestGame: PhoenixEngine
ifneq (,$(TestGame_config))
	@echo "==== Building TestGame ($(TestGame_config)) ===="
	@${MAKE} --no-print-directory -C TestGame -f Makefile config=$(TestGame_config)
endif

clean:
	@${MAKE} --no-print-directory -C PhoenixEngine -f Makefile clean
	@${MAKE} --no-print-directory -C TestGame -f Makefile clean

help:
	@echo "Usage: make [config=name] [target]"
	@echo ""
	@echo "CONFIGURATIONS:"
	@echo "  debug"
	@echo "  release"
	@echo ""
	@echo "TARGETS:"
	@echo "   all (default)"
	@echo "   clean"
	@echo "   PhoenixEngine"
	@echo "   TestGame"
	@echo ""
	@echo "For more information, see http://industriousone.com/premake/quick-start"
